body {
  padding: 0px;
  margin: 0px;
  height: 100%;
  width: 100%;
}
#app {
  width: 100%;
  height: 100%;
}

.markerTitle {
	font-size: 1em;
	font-weight: bold;
	text-decoration: underline;
	cursor: pointer;
}

.markerDesc {
  max-height: 15em;
  overflow: auto;
  border: 1px solid #AAA;
}

// Override for image assets
.leaflet-control-layers-toggle {
  background-image: url('<%= asset_path("leaflet/dist/images/layers.png") %>');
  width: 36px;
  height: 36px;
  }
.leaflet-retina .leaflet-control-layers-toggle {
  background-image: url('<%= asset_path("leaflet/dist/images/layers-2x.png") %>');
  background-size: 26px 26px;
  }
