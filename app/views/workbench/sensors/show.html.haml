	$(function() {
		L.Icon.Default.imagePath = '/assets';

		// Demo user API Key
		var apiKey = "3359a8ffba94a54978aa6c645e3c617a";

		var dsSource = new Geocens.DataService({ api_key: apiKey });

		// Loading from GeoCENS
		var sensorUid = "f9b0b42d4b742638f96dfea960ef4735";
		// TODO: Load datastream uids with call to sensor object
		var datastreamUids = ["5933c4e32b8f9fe2fcbc991b91913e15", "d0b0f8858dc96f9f0b6463a9c9176627"];

		_.each(datastreamUids, function(datastreamUid) {
		  dsSource.getDatastream({
			sensor_id: sensorUid,
			datastream_id: datastreamUid,
			done: function (datastream) {

				// Retrieve time series data
				datastream.getTimeSeries({
					start: new Date("2013-10-01 00:00:00Z"),
					end:   new Date("2013-10-16 00:00:00Z"),
					done:  function (seriesData) {

						// Update window with datastream information
						Workbench.Events.trigger("addDatastream", _.extend(datastream._attributes, { data: datastream._data }));
					}
				});
			}
		  });
		});

		// Backbone-related

		var sensor = {
			name: "Sensor X1",
			id: "asdf5555",
			description: "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.",
			owner: "James",
			contact: "james@example.com",
			latitude: "51.055",
			longitude: "-114"
		};

		window.appRouter = new Workbench.Routers.WorkbenchRouter({ sensor: sensor });

		var result = Backbone.history.start({ pushState: true, root: "/workbench/sensors/" });
	});
